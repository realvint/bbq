<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), class: 'round-avatar' %>

  <% if @user == current_user %>
  <p class="buffer-top">
    <%= link_to t('.edit'), edit_user_path(@user), class: 'btn btn-outline-secondary' %>
  </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('.created') %></h3>
        <div class="row justify-content-center">
          <%= render @user.events %>
        </div>
      <% else %>
        <p><%= t('.nothing_created') %></p>
      <% end %>
    </div>
  </div>
</div>
