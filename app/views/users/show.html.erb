<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <p class="buffer-top">
    <%= link_to "Редактировать профиль", edit_user_path(@user),
                class: 'btn btn-outline-secondary' %>
  </p>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row justify-content-center">
          <%= render @user.events %>
        </div>
      <% else %>
        <p>Никаких событий не организовано(</p>
      <% end %>
    </div>
  </div>
</div>
