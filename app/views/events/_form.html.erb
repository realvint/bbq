<%= form_for(@event) do |f| %>
  <%= render 'shared/errors', resource: @event %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= f.label :datetime %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="mt-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="mt-3">
    <%= f.submit class: 'btn btn-primary' %>
    | <%= link_to t('.back'), :back %>
  </div>
<% end %>
