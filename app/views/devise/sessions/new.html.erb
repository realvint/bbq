<div class='form-control mb-3 shadow p-3 mb-5 bg-white rounded' style='width: 400px; margin: 10% auto auto;'>
  <div class='mb-3' style='margin: 25px 20px'>
    <h2><%= t('.header') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='my-3'>
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class='mb-3'>
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class='mb-3'>
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me') %>
          <% end %>
        </div>
      <% end %>

      <div class='d-grid gap-2 mb-3'>
        <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
          <i class='fa fa-cat'></i>&nbsp <%= t('.log_in') %>
        <% end %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
